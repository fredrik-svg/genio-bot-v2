# MQTT Configuration
# Using HiveMQ Cloud - no local MQTT broker installation needed
# Get your HiveMQ Cloud credentials from: https://console.hivemq.cloud/
MQTT_HOST=your-cluster.hivemq.cloud
MQTT_PORT=8883
MQTT_USERNAME=your-hivemq-username
MQTT_PASSWORD=your-hivemq-password
MQTT_TLS=True

# Picovoice Porcupine API Key (KÄNSLIG - håll privat!)
PORCUPINE_ACCESS_KEY=

# Paths (relativa eller absoluta)
WAKEWORD_PATH=models/wakewords/sv/assistans.ppn
VOSK_MODEL_PATH=models/vosk-model-sv
PIPER_MODEL_PATH=models/piper-sv

# Audio settings
INPUT_DEVICE_INDEX=
OUTPUT_DEVICE_INDEX=
SAMPLE_RATE=16000
RECORD_SECONDS_AFTER_WAKE=6

# Logging
LOG_LEVEL=INFO
